<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
         body{
            text-align: center;
            background-color: rgb(255, 255, 255);
        }
       .group{
            margin-top: 100px;
            /* margin-left: 35%; */
            margin-bottom: 40px;
            display: flex;
            flex-direction: row;
            justify-content: center;
        }
        .color{
            width: 100px;
            height: 200px;
            border: 2px solid black;
            border-radius: 3px;
        }
        #d{
        background-color: white;
        color: black;
        border: 2px solid #4CAF50;
        font-size: 20px;
        padding: 5px 20px 5px 20px;
        border-radius: 5px; 
        text-decoration: none;/* Green */
        }
        #e{
        background-color: white;
        color: black;
        border: 2px solid #4CAF50; 
        font-size: 20px;
        padding: 5px 20px 5px 20px;
        border-radius: 5px;
        text-decoration: none;
        /* Green */
        /* Green */
        }
        #d:hover{
            background-color: chartreuse;
            color: rgb(0, 0, 0);
        }
        #e:hover{
            background-color: chartreuse;
            color: rgb(0, 0, 0);
        }
        /* @media (max-width: 980px){
            .group{
           
               margin-left: 10%;
            
           }
        }
        @media (max-width: 600px){
            .group{
           
               margin-left: 0%;
            
           }
        } */
    </style>
</head>
<body>
    <%- include('partials/navbar') %>
    
    <% let c = eachcolor.colors %>
    <h1><%= eachcolor.title %> </h1>
    <div class = "group">
        <% for(let i = 0;i<c.length;i++){ %> 
            <div class = "column">
                <div class = "color"></div>
            </div>
        <% } %> 
    </div> 
    <a href = "/delete/<%= eachcolor._id %>" id = "d">Delete</a>
    <a href = "/edit/<%= eachcolor._id %>" id = "e">Edit</a>
    <script>
        let c = '<%- c %>'; 
        let cc = document.querySelectorAll('.color');
        c = c.split("),");
        for(let i =0;i<c.length-1;i++)
        {
            c[i] = c[i] + ')';
        }
        for(let i =0;i<c.length;i++)
        {
            cc[i].style.backgroundColor = c[i];
        }
    </script>
</body>
</html>